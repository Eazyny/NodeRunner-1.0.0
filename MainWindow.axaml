<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        x:Class="NodeRunner.MainWindow"
        Title="NodeRunner"
        Width="800" Height="350"
        MinWidth="800" MinHeight="350"
        Icon="/Assets/icon.ico">
    
    <Grid>
        <!-- Background Image -->
        <Image Source="avares://NodeRunner/Assets/hytopia.jpg"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               ZIndex="-1"/>
        
        <!-- Transparent Overlay -->
        <Border Background="#AA000000" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                ZIndex="-1"/> 

        <!-- Main Layout Grid -->
        <Grid RowDefinitions="Auto, *">
            
            <!-- Status Bar -->
            <Border x:Name="StatusBar" 
                    Background="Red" 
                    Height="30" 
                    HorizontalAlignment="Stretch"
                    Grid.Row="0">
                <TextBlock x:Name="StatusText" 
                           Text="Nodes Stopped"
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" 
                           FontWeight="Bold"/>
            </Border>

            <!-- Main Navigation UI -->
            <ui:NavigationView Grid.Row="1" 
                               PaneDisplayMode="Left" 
                               OpenPaneLength="200"
                               IsPaneToggleButtonVisible="False" 
                               IsSettingsVisible="False">
                <ui:NavigationView.PaneHeader>
                    <TextBlock Text="NodeRunner" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,20,0,20"/>
                </ui:NavigationView.PaneHeader>

                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem>
                        <Button x:Name="HomeButton" 
                                Click="HomeButton_Click" 
                                HorizontalAlignment="Center" 
                                Background="#DD1C1C1C"> 
                            <StackPanel Orientation="Horizontal">
                                <fa:SymbolIcon Symbol="Home" />
                                <TextBlock x:Name="HomeButtonText" 
                                           Text="Run Nodes" 
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem>
                        <Button x:Name="NodesButton" 
                                Click="NodesButton_Click" 
                                HorizontalAlignment="Center" 
                                Background="#DD1C1C1C">
                            <StackPanel Orientation="Horizontal">
                                <fa:SymbolIcon Symbol="Globe" />
                                <TextBlock Text="Check Balance" 
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem>
                        <Button x:Name="BalancesButton" 
                                Click="BalancesButton_Click" 
                                HorizontalAlignment="Center" 
                                Background="#DD1C1C1C">
                            <StackPanel Orientation="Horizontal">
                                <fa:SymbolIcon Symbol="Calculator" />
                                <TextBlock Text="Claim" 
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem>
                        <Button x:Name="SelectScriptsFolderButton" 
                                Click="SelectScriptsFolder_Click" 
                                Content="Select Scripts Folder" 
                                HorizontalAlignment="Center" 
                                Background="#DD1C1C1C"/>
                    </ui:NavigationViewItem>
                </ui:NavigationView.MenuItems>

                <!-- Pane Footer with Branding and Version Info -->
                <ui:NavigationView.PaneFooter>
                    <StackPanel HorizontalAlignment="Center" Margin="10">
                        <TextBlock Text="BlockchainEazy Â© 2025" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="V1.0.1" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </ui:NavigationView.PaneFooter>

                <ui:NavigationView.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Pending Balance -->
                        <TextBox Grid.Row="0" 
                                 x:Name="PendingBalance" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Top" 
                                 Margin="10"
                                 IsReadOnly="True" 
                                 Text="Pending Balance: 0" 
                                 Background="#CC1C1C1C" 
                                 Foreground="White"/>
                        
                        <!-- Output Log -->
                        <ScrollViewer Grid.Row="1" 
                                      x:Name="ResultScreenScrollViewer" 
                                      VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="ResultScreen" 
                                     HorizontalAlignment="Stretch" 
                                     VerticalAlignment="Stretch" 
                                     Margin="10,0,10,10"
                                     IsReadOnly="True" 
                                     Background="#CC1C1C1C" 
                                     Foreground="White" 
                                     BorderThickness="0"/>
                        </ScrollViewer>
                    </Grid>
                </ui:NavigationView.Content>
            </ui:NavigationView>
        </Grid>
    </Grid>
</Window>
